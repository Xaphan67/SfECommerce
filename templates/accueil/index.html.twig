{% extends 'base.html.twig' %}

{% block title %}E-Commerce - Accueil{% endblock %}

{% block body %}
    {# Nouveautés #}
    <div class="categories">
        <h2>Nouveautés</h2>
        <div class="conteneur nouveautes">
            {% for ordinateur in ordinateurs | slice(0, 1) %}
                <div class="nouveau-produit">
                    <div class="produit-image">
                        <img src="{{ asset('img/produits/' ~ ordinateur.categorie | lower | replace({ 'á':'a', 'é':'e', 'è':'e', 'í':'i', 'ó':'o', 'ú':'u' }) ~ '/' ~ ordinateur.photo) }}" alt="{{ ordinateur.designation }}">
                    </div>
                    <div class="nouveau-infos">
                        <span class="produit-designation"><a href="">{{ ordinateur.designation }}</a></span>
                        <span class="prix">{{ ordinateur.prix }} €</span>
                    </div>
                </div>
            {% endfor %}
        
            {% for composant in composants | slice(0, 1) %}
                <div class="nouveau-produit">
                    <div class="produit-image">
                        <img src="{{ asset('img/produits/' ~ composant.categorie | lower | replace({ 'á':'a', 'é':'e', 'è':'e', 'í':'i', 'ó':'o', 'ú':'u' }) ~ '/' ~ composant.photo) }}" alt="{{ composant.designation }}">
                    </div>
                    <div class="nouveau-infos">
                        <span class="produit-designation"><a href="">{{ composant.designation }}</a></span>
                        <span class="prix">{{ composant.prix }} €</span>
                    </div>
                </div>
            {% endfor %}
        
            {% for peripherique in peripheriques | slice(0, 1) %}
                <div class="nouveau-produit">
                    <div class="produit-image">
                        <img src="{{ asset('img/produits/' ~ peripherique.categorie | lower | replace({ 'á':'a', 'é':'e', 'è':'e', 'í':'i', 'ó':'o', 'ú':'u' }) ~ '/' ~ peripherique.photo) }}" alt="{{ peripherique.designation }}">
                    </div>
                    <div class="nouveau-infos">
                        <span class="produit-designation"><a href="">{{ peripherique.designation }}</a></span>
                        <span class="prix">{{ peripherique.prix }} €</span>
                    </div>
                </div>
            {% endfor %} 
        </div>   
    </div>

    {# Catégories #}
    <div class="categories">
        <h2>Catégories</h2>
        <div class="conteneur accueil-conteneur">
            <img class="accueil-conteneur-image" src="{{ asset('img/accueil/ordinateurs.png') }}" alt="ordinateurs">
            <span class="accueil-nom-categorie" >Ordinateurs</span>
            <ul>
                <li class="menu-categorie"><a href="">PC sur mesure</a></li>
                <li class="menu-categorie"><a href="">PC gamer</a></li>
                <li class="menu-categorie"><a href="">PC portables</a></li>
                <li class="menu-categorie"><a href="">PC portables Gamer</a></li>
                <li class="menu-categorie"><a href="">Configurateur PC</a></li>
            </ul>
        </div>
        <div class="conteneur accueil-conteneur">
            <img class="accueil-conteneur-image" src="{{ asset('img/accueil/composants.png') }}" alt="composants">
            <span class="accueil-nom-categorie" >Composants</span>
            <ul>
                <li class="menu-categorie"><a href="">Processeurs</a></li>
                <li class="menu-categorie"><a href="">Cartes internes</a></li>
                <li class="menu-categorie"><a href="">Boîtiers</a></li>
                <li class="menu-categorie"><a href="">Stockage interne</a></li>
                <li class="menu-categorie"><a href="">Refroidissement</a></li>
            </ul>
        </div>
        <div class="conteneur accueil-conteneur">
            <img class="accueil-conteneur-image" src="{{ asset('img/accueil/peripheriques.png') }}" alt="péripheriques">
            <span class="accueil-nom-categorie" >Péripheriques</span>
            <ul>
                <li class="menu-categorie"><a href="">Ecrans</a></li>
                <li class="menu-categorie"><a href="">Périphériques Gamer</a></li>
                <li class="menu-categorie"><a href="">Bureautique</a></li>
                <li class="menu-categorie"><a href="">Stockage externe</a></li>
                <li class="menu-categorie"><a href="">Webcams</a></li>
            </ul>
        </div>  
    </div>

    {# Marques #}
    <div class="categories">
        <h2>Nos Marques</h2>
        <div class="conteneur marques">
            {% for marque in marques %}
                <div class="marque">
                    <div class="marque-image">
                        <img src="{{ asset('img/marques/' ~ marque.logo) }}" alt="{{ marque }}">
                    </div>
                    {{ marque }}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
